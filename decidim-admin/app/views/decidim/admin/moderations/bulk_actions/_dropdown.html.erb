<div id="js-bulk-actions-wrapper" class="relative">
  <button
    id="js-bulk-actions-button"
    class="button button__sm button__secondary"
    type="button"
    data-component="dropdown"
    data-target="js-bulk-actions-dropdown">
    <%= t("decidim.admin.moderations.index.actions.actions_dropdown") %>
    <%= icon "arrow-down-s-line" %>
    <%= icon "arrow-down-s-line" %>
  </button>

  <ul
    id="js-bulk-actions-dropdown"
    class="dropdown dropdown__bottom"
    aria-hidden="true">
    <% if !params[:hidden] && allowed_to?(:hide, authorization_scope) %>
      <li>
        <button type="button" data-action="hide-global-moderations" class="dropdown__item">
          <%= t("decidim.admin.moderations.index.actions.hide.title") %>
        </button>
      </li>
    <% end %>
    <% if !params[:hidden] && allowed_to?(:unreport, authorization_scope) %>
      <li>
        <button type="button" data-action="unreport-global-moderations" class="dropdown__item">
          <%= t("decidim.admin.moderations.index.actions.unreport.title") %>
        </button>
      </li>
    <% end %>
    <% if params[:hidden] %>
      <li>
        <button type="button" data-action="unhide-global-moderations" class="dropdown__item">
          <%= t("decidim.admin.moderations.index.actions.unhide.title") %>
        </button>
      </li>
    <% end %>
  </ul>
</div>
