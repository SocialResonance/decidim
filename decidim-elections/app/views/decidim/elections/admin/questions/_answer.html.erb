<div class="card questionnaire-question-response-option">
  <div class="card-divider">
    <h2 class="card-title">
      <%= t("edit_questions.answer_option", scope: "decidim.elections.admin.questions") %>
    </h2>
  </div>

  <div class="card-section">
    <div class="row column">
      <%= form.translated :text_field, :statement %>
    </div>

    <% if form.object.persisted? %>
      <%= form.hidden_field :id %>
    <% end %>
  </div>
</div>
